# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index

GET     /service                        controllers.ServiceController.index()

# Items list
GET     /service/items                  controllers.ItemController.index()


# Add item
GET     /service/items/new              controllers.ItemController.newItem()
+ nocsrf
POST    /service/items                  controllers.ItemController.save()

# Edit item
GET     /service/items/:id              controllers.ItemController.edit(id:Long)
+ nocsrf
POST    /service/items/:id              controllers.ItemController.update(id:Long)

# Delete item
+ nocsrf
POST    /service/items/:id/delete       controllers.ItemController.delete(id:Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)